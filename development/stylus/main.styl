// LISTA
ul, ol
	display block
	margin 0 auto
	padding 0
	width 90%
ol
	counter-reset li-counter
	list-style-type none;
	list-style-type decimal !ie
ul li, ol li
	background-color #1E1E1E
	border-radius 4px
	color #666
	display block
	font-size 15px
	height 32px
	line-height 32px
	margin 0 0 2px
	padding 0 7px
ol li
	border none
	display list-item
	padding-left 35px
	position relative
ol li:before
	background-color #9BD94F
	border-radius 50%
	color #fff
	content counter(li-counter)
	counter-increment li-counter
	font-size 11px
	font-weight bold
	height 20px
	left 5px
	line-height 20px
	position absolute
	text-align center
	top 6px
	width 20px
ul li:first-child, ol li:first-child
	border none

