@require 'fonts.styl'
@require 'mixins.styl'

// RESET
*
	margin 0px
	padding 0px
input
	background none
	border-radius 0
	outline none
body
	background #FFF
	width 6090px
button
	background none
	border none
	outline none
.tela
	background-color #2A2A2A
	border 1px solid #000
	color #FFF
	display block
	float left
	height 480px
	margin 5px 0 0 5px
	overflow hidden
	position relative
	width 320px
#login
#inicio
#perfil
	background-image url(../images/marca.png)
	background-position 0 0
	background-repeat no-repeat
	background-size 297px 567px
#container
	display block
	height 100%
	position relative
	transition transform 0.3s ease-out
.clear
	display block
	clear both
	margin-top 5px
	width 100%

h1
h2
h3
h4
	display block
	font-family TitilliumWeb-Bold
	margin 10px 0
	text-align center
h2
	background-color #C03119
	font-size 21px
	height 40px
	line-height 40px
	margin 0 auto
select
