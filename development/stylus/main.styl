@require 'fonts.styl'

// RESET
*
	color #444
	font-family exo_2regular
	margin 0px
	padding 0px
input
	background none
	border-radius 0
body
	background #FFF
	width 6090px
button
	background none
	border none
	outline none
.tela
	background-image linear-gradient(rgb(255, 255, 255) 0%, rgb(238, 238, 238) 100%)
	border 1px solid #000
	color #FFF
	display block
	float left
	height 430px
	margin 0 5px 0 0
	overflow hidden
	position relative
	width 320px
.clear
	display block
	clear both
	margin-top 5px
	width 100%
input[type="text"], input[type="password"], input[type="email"]
	background #fff
	border 1px solid
	border-radius 4px
	color #2c3e50
	display block
	font-size 12px
	margin 5px auto
	padding 5px 8px
	width 234px

// BOTOES
.btn
	background #34495e
	border-bottom 3px solid #2c3e50
	border-radius 4px
	color #fff
	display block
	font-size 13px
	height 40px
	line-heigh 40px
	margin 5px auto
	text-align center
	text-transform uppercase
	width 250px

// CORES
.verde
	background #2ecc71
	border-bottom 3px solid #27ae60
.azul
	background #3498db
	border-bottom 3px solid #2980b9
.roxo
	background #9b59b6
	border-bottom 3px solid #8e44ad
.amarelo
	background #f1c40f
	border-bottom 3px solid #f39c12
.laranja
	background #e67e22
	border-bottom 3px solid #d35400
.vermelho
	background #e74c3c
	border-bottom 3px solid #c0392b
// CONTENT
.content
	display block
// LOGO
.logo
	background #000
	border-radius 50%
	height 150px
	margin 25px auto
	width 150px

// MENU BOTOES
.menu-botoes
	display block
	text-align center
.menu-botoes button
	border-radius 5px
	color #fff
	display inline
	font-size 10px
	height 90px
	margin-top 10px
	padding 10px
	text-align center
	text-transform uppercase
	width 90px
.menu-botoes button i
	background #fff
	border-radius 50%
	display block
	height 24px
	margin 0 auto 10px
	width 24px

// TITULOS
.titulo
	color #fff
	display block
	font-family exo_2bold
	height 50px
	line-height 50px
	position relative
	text-align center
	text-transform uppercase
.titulo .mini-btn
	border 1px solid #2980b9
	border-bottom 3px solid #2980b9
	border-radius 5px
	color #fff
	display block
	height 30px
	line-height 30px
	position absolute
	text-align center
	top 10px
	width 30px
.btn-l
	left 10px
.btn-r
	right 10px

// LISTA
ul
	display block
ul li
	background #ecf0f1
	border-top 1px solid #bdc3c7 
	display block
	font-size 16px
	padding 5px
ul li:first-child
	border none
