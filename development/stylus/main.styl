// MENU LATERAL
.menu-lateral
	background #141514
	box-shadow inset 3px 0px 5px #000
	display block
	height 100%
	left 0
	position absolute
	top 0
	width 280px 
	h4
		color #E7412D
		font-size 12px
	h2
		background none
		color #E7412D
	dl
		display block
		margin 0 auto 20px
		width 250px
		dt
			border-bottom 2px solid #e7412d
			margin 0 0 10px
			i
				float right
				margin 2px 0 0
				&:before
					font-size 15px
	.foto
		background url(../images/froning.jpg) 0 0 no-repeat
		background-size cover
		border 3px solid #fff
		border-radius 50%
		display block
		height 100px
		margin 15px auto
		width 100px
.menu
	display inline-block
	height 25px
	left 10px
	position absolute
	top 10px
	width 20px
	z-index 99
.menu span
	margin 0 auto
	position relative
	top 11px
	transition-duration 0s
	transition-delay .25s
.menu span:before, .menu span:after
	content ''
	position absolute
.menu span, .menu span:before, .menu span:after
	background-color #fff
	border-radius 5px
	display block
	height 4px
	width 20px
.menu span:before
	margin-top -9px
	transition-property margin, transform
	transition-duration .2s
	transition-delay .2s, 0  
	-webkit-transition-property margin, -webkit-transform
	-webkit-transition-duration .2s
	-webkit-transition-delay  .2s, 0 
.menu span:after
	margin-top 9px
	transition-property margin, transform
	transition-duration .2s
	transition-delay .2s, 0  
	-webkit-transition-property margin, -webkit-transform
	-webkit-transition-duration .2s
	-webkit-transition-delay .2s, 0;
.menu-active span
	background-color rgba(0,0,0,0.0)
	transition-delay .2s
	-webkit-transition-delay .2s
.menu-active span:before
	margin-top 0
	transform rotate(45deg)
	transition-delay 0, .2s
	-webkit-transform rotate(45deg)
	-webkit-transition-delay 0, .2s
.menu-active span:after
	margin-top 0
	transform rotate(-45deg)
	transition-delay 0, .2s
	-webkit-transform rotate(-45deg)
	-webkit-transition-delay 0, .2s
.active
	transform translate3d(280px,0,0)

