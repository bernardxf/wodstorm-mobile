// CONTENT
.content
	display block
	height 100%
	overflow auto
	position relative
// LOGO
.logo
	background url(../images/logo.png) 0 0 no-repeat
	height 150px
	margin 25px auto
	width 133px

// LOGIN
form.login
	background #fff
	border-radius 4px
	margin 0 auto
	padding 10px
	width 80%
form.login input
	background-color #fff
	border 1px solid #ccc
	border-radius 4px
	box-shadow inset 0 1px 1px rgba(0,0,0,0.075)
	-webkit-box-shadow inset 0 1px 1px rgba(0,0,0,0.075)
	color #555
	display block
	font-size 14px
	line-height 1.428571429
	margin-bottom 10px
	padding: 6px 12px
	vertical-align middle
	width 224px
form.login button
	background #e5412d
	border-color #dd301b

// MENU BOTOES
.menu-botoes
	display block
	text-align center
.menu-botoes button
	border-radius 5px
	color #fff
	display inline
	font-size 10px
	height 90px
	margin-top 10px
	padding 10px
	text-align center
	text-transform uppercase
	width 90px
.menu-botoes button i
	background #fff
	border-radius 50%
	display block
	height 24px
	margin 0 auto 10px
	width 24px
.bottom-position
	position relative
	bottom -125px
.bottom-position-tabata
	position relative
	bottom -82px

// TITULOS
.titulo
	color #fff
	display block
	height 50px
	letter-spacing -2px
	line-height 50px
	position relative
	text-align center
	text-transform uppercase
.titulo .mini-btn
	border-radius 5px
	color #fff
	display block
	height 30px
	line-height 30px
	position absolute
	text-align center
	top 10px
	width 30px
.btn-l
	left 10px
.btn-r
	right 10px
h3
	display block
	margin 10px 0
	text-align center

// LISTA
ul
	display block
ul li
	color #fff
	//background #3f3f3f
	linear-gradient(to bottom,#3f3f3f 0%,#222 100%);
	border-top 1px solid #bdc3c7 
	display block
	font-size 16px
	padding 5px
ul li:first-child
	border none

// PERSONAL RECORDS
.pr
	font-family exo_2bold
	font-size 40px
	text-align center

//WOD TIME - FOR TIME
.timer
	font-family exo_2bold
	font-size 50px
	text-align center
	color #fff
.rep-count
	font-family exo_2bold
	font-size 50px
	text-align center
	position relative
	bottom -125px
	color #fff
.rep-count-tabata
	font-family exo_2bold
	font-size 50px
	text-align center
	position relative
	bottom -87px
	color #fff

// PERFIL
.foto
	border 2px solid #fff
	border-radius 50%
	float left
	height 80px
	margin 15px 15px 0 0
	width 80px