@require 'fonts.styl'

// RESET
*
	color #fff
	font-family exo_2regular
	margin 0px
	padding 0px
input
	background none
	border-radius 0
	outline none
body
	background #FFF
	width 6090px
button
	background none
	border none
	outline none
strong
	font-family exo_2bold
.tela
	background-image -webkit-gradient(linear, left 0%, left 100%, from(#3f3f3f), to(#222222))
	background-image -webkit-linear-gradient(top, #3f3f3f, 0%, #222222, 100%)
	background-image -moz-linear-gradient(top, #3f3f3f 0%, #222222 100%)
	background-image linear-gradient(to bottom, #3f3f3f 0%, #222222 100%)
	border 1px solid #000
	color #FFF
	display block
	float left
	height 430px
	margin 0 5px 0 0
	overflow hidden
	position relative
	width 320px
.clear
	display block
	clear both
	margin-top 5px
	width 100%

// FORMULARIOS
form
	display block
	padding 10px
input[type="text"], input[type="password"], input[type="email"], input[type="date"], textarea
	background #fff
	border 1px solid #95a5a6
	border-bottom 2px solid #95a5a6
	border-radius 4px
	color #2c3e50
	display block
	font-size 13px
	margin 5px auto
	padding 5px 8px
	width 234px
p
	display block
	padding 10px

// BOTOES
.btn
	background #34495e
	border-bottom 3px solid #2c3e50
	border-radius 4px
	color #fff
	display block
	font-size 13px
	height 40px
	line-heigh 40px
	margin 5px auto
	text-align center
	text-transform uppercase
	width 250px
.mid-position
	position relative;
	bottom -100px;
.mid-position-tabata
	position relative;
	bottom -57px;


// CORES
.verde
	background #2ecc71
	border-bottom 3px solid #27ae60
.verde .mini-btn
	border 1px solid #27ae60
	border-bottom 3px solid #27ae60
.azul
	background #3498db
	border-bottom 3px solid #2980b9
.azul .mini-btn
	border 1px solid #2980b9
	border-bottom 3px solid #2980b9
.roxo
	background #9b59b6
	border-bottom 3px solid #8e44ad
.roxo .mini-btn
	border 1px solid #8e44ad
	border-bottom 3px solid #8e44ad
.amarelo
	background #f1c40f
	border-bottom 3px solid #f39c12
.amarelo .mini-btn
	border 1px solid #f39c12
	border-bottom 3px solid #f39c12
.laranja
	background #e67e22
	border-bottom 3px solid #d35400
.laranja .mini-btn
	border 1px solid #d35400
	border-bottom 3px solid #d35400
.vermelho
	background #e74c3c
	border-bottom 3px solid #c0392b
.vermelho .mini-btn
	border 1px solid #c0392b
	border-bottom 3px solid #c0392b

