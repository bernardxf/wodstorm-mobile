	margin 10px 0
	text-align center

select, select option
	background none
	border none
	font-size 16px

// FORMULARIOS
form
	margin 0 auto
	padding 0
	width 90%
	p
		display block
		margin 0 0 5px 0
		padding 0
		label
			background-color #1E1E1E
			border-radius 4px 0 0 4px
			display block
			float left
			font-size 12px
			height 50px
			line-height 50px
			padding 0 10px
			width 50px
		input[type="text"]
		input[type="password"]
		input[type="email"]
		input[type="date"]
		textarea
		select
			background-color #1E1E1E
			border none
			border-radius 0 4px 4px 0
			color #666
			display block
			font-size 15px
			height 50px
			margin 0
			padding 0 5px 0 0
			width 213px
	p.textarea label
		height 190px
	p.textarea textarea
		padding-top 5px
		height 185px
