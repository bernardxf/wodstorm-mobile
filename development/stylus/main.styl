		ul.configs
			float left
			width 100%
			li
				background none
				color #666
				float left
				height auto
				text-align center
				width 20%
.rounds
.reps
	display block
	float left
	font-size 20px
	margin 15px 0
	text-align center
	width 50%
	span
		display inline-block
		font-size 25px
		padding 0 5px
.time
	display block
	float left
	font-size 60px
	margin 55px 0
	text-align center
	width 100%
	&.verde
		background none
		color #0f0
	&.vermelho
		background none
		color #f00
	

